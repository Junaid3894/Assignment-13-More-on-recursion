/*4. Write a recursive function to calculate sum of squares of first n natural numbers*/

#include<stdio.h>
int sum(int n);// function prototype
int main()
{
int n;
printf("Enter the number :");
scanf("%d",&n);
printf("%d",sum(n));

return 0;
}
int sum(int n){ // function defination
    if(n==0){
        return 0;
    }
    return n*n +sum(n-1); 
   
   
}
