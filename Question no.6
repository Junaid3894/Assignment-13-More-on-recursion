/*6. Write a recursive function to calculate factorial of a given number*/

#include<stdio.h>
int fact(int n);// function prototype
int main()
{
int n;
printf("Enter the number :");
scanf("%d",&n);
printf("%d",fact(n));

return 0;
}
int fact(int n){ // function defination
    if(n==0 || n==1){
        return 1;
    }
    return n*fact(n-1);
    

   
   
}
