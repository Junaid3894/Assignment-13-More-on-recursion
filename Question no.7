/*7. Write a recursive function to calculate HCF of two numbers*/

#include<stdio.h>
int Hcf(int a,int b);// function prototype
int main(){
int a,b;
printf("Enter the value of a and b :");
scanf("%d %d",&a,&b);
printf("HCF is %d",Hcf(a,b));
return 0;
}
int Hcf(int a,int b){ // function defination
// using Euclid theorem
    if(a==b){
        return a;
    }
    if(a%b==0){
        return b;
    }
    if(b%a==0){
        return a;
    }
    if(a>b){
    return (Hcf(a%b,b));
    }
    else{
        return (Hcf(a,b%a));

    }
}


    
    

   
