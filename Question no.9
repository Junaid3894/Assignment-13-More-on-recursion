/*9. Write a program in C to count the digits of a given number using recursion.*/

#include<stdio.h>
int count(int n);// function prototype
int main(){
int n;
printf("Enter the numner :");
scanf("%d",&n);
printf("%d",count(n));
return 0;
}
int c=0;
int count(int n){ // function defination
    if(n==0){
        return n;
    }
    count(n/10);
    if(n%10){
        c++;
    }
    
    return c;

    
}


    
    

   
